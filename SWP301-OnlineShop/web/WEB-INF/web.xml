<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.user.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterController</servlet-name>
        <servlet-class>controller.user.RegisterController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ResetPasswordController</servlet-name>
        <servlet-class>controller.user.ResetPasswordController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CustomerListControler</servlet-name>
        <servlet-class>controller.marketing.CustomerListControler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CustomerDetails</servlet-name>
        <servlet-class>controller.marketing.CustomerDetailsControler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserProfileControler</servlet-name>
        <servlet-class>controller.user.UserProfileControler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterController</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ResetPasswordController</servlet-name>
        <url-pattern>/reset</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CustomerListControler</servlet-name>
        <url-pattern>/customer/list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CustomerDetails</servlet-name>
        <url-pattern>/customer/details</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserProfileControler</servlet-name>
        <url-pattern>/user/proflie</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
